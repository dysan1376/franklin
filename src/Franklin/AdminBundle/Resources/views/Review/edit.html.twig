    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label>Locale</label>
                {{ form_widget(com.locale, {'attr': {'class': 'form-control'}}) }}
            </div>
        </div>
        <div class="col-md-12 pr-1">
            <div class="form-group">

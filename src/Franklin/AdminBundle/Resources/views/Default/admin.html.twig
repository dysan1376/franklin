<!DOCTYPE html>
<html lang="es">

{% block head %}
<!-- Head -->
<head>
    <meta charset="utf-8" />
    <!-- Favicons -->
    <link rel="shortcut icon" href="{{ asset('bundles/portada/img/favicon.png') }}">
    <link rel="apple-touch-icon" href="{{ asset('bundles/portada/img/favicon_60x60.png') }}">
    <link rel="apple-touch-icon" sizes="76x76" href="{{ asset('bundles/portada/img/favicon_76x76.png') }}">
    <link rel="apple-touch-icon" sizes="120x120" href="{{ asset('bundles/portada/img/favicon_120x120.png') }}">
    <link rel="apple-touch-icon" sizes="152x152" href="{{ asset('bundles/portada/img/favicon_152x152.png') }}">

    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1" />
    <title>{{"admin.franklin_alvear_cirujano"|trans}}</title>
    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0, shrink-to-fit=no' name='viewport' />
    <!--     Fonts and icons     -->
    <link href="https://fonts.googleapis.com/css?family=Montserrat:400,700,200" rel="stylesheet" />
    {% block css %}
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" />
    <!-- CSS Files -->
    <link href="{{ asset('bundles/portada/css/bootstrap.min.css') }}" rel="stylesheet" />
    <link href="{{ asset('bundles/portada/css/light-bootstrap-dashboard.css?v=2.0.1') }}" rel="stylesheet" />
    <!-- CSS Just for demo purpose, don't include it in your project -->
    <link href="{{ asset('bundles/portada/css/demo.css') }}" rel="stylesheet" />
    {% endblock %}
</head>
<!-- End Head -->
{% endblock %}

{% block body %}
<!-- Body -->
<body>

    {% block wrapper %}
    <!-- Wrapper -->
    <div class="wrapper">

        {% block sidebar %}
        <!-- Sidebar -->
        <div class="sidebar" data-color="blue" data-image="{{ asset('bundles/portada/img/sidebar.jpg') }}">

            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="https://franklinalvear.com" target="_blank">
                        <img style="display: block; margin-left: auto; margin-right: auto;" src="{{ asset('bundles/portada/img/favicon_60x60.png') }}">
                    </a>
                </div>
                <ul class="nav">
                    <li class="dashboard">
                        <a class="nav-link" href="{{ path('admin_dashboard') }}">
                            <i class="nc-icon nc-chart-pie-35"></i>
                            <p>{{"admin.panel_control"|trans}}</p>
                        </a>
                    </li>
                    <li class="profile">
                        <a class="nav-link" href="{{ path('admin_profile') }}">
                            <i class="nc-icon nc-circle-09"></i>
                            <p>{{"admin.perfil"|trans}}</p>
                        </a>
                    </li>
                    <li class="blogs">
                        <a class="nav-link" href="{{ path('admin_blog') }}">
                            <i class="nc-icon nc-paper-2"></i>
                            <p>{{"admin.blogs"|trans}}</p>
                        </a>
                    </li>
                    <li class="nav-item active active-pro">
                        <a class="nav-link active" href="{{ path('fos_user_security_logout') }}">
                            <i class="nc-icon nc-button-power"></i>
                            <p>{{"admin.salir"|trans}}</p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <!-- End Sidebar -->
        {% endblock %}

        {% block mainpanel %}
        <!-- Main Panel -->
        <div class="main-panel">

            {% block navbar %}
            <!-- Navbar -->
            <nav class="navbar navbar-expand-lg " color-on-scroll="500">
                <div class=" container-fluid  ">
                    <a class="navbar-brand" href="#"></a>
                    <button href="" class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" aria-controls="navigation-index" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                        <span class="navbar-toggler-bar burger-lines"></span>
                    </button>
                    
                </div>
            </nav>
            <!-- End Navbar -->
            {% endblock %}

            {% block content %}{% endblock %}

            {% block footer %}
            <footer class="footer">
                <div class="container">
                    <nav>
                        <ul class="footer-menu">
                            <li>
                                <a href="{{ path('admin_dashboard') }}">
                                    {{"admin.panel_control"|trans}}
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('admin_profile') }}">
                                    {{"admin.perfil"|trans}}
                                </a>
                            </li>
                            <li>
                                <a href="{{ path('admin_blog') }}">
                                    {{"admin.blogs"|trans}}
                                </a>
                            </li>
                        </ul>
                        <p class="copyright text-center">
                            Franklin Alvear Â©
                            <script>
                                document.write(new Date().getFullYear())
                            </script>
                        </p>
                    </nav>
                </div>
            </footer>
            {% endblock %}
        </div>
        <!-- End Main Panel -->
        {% endblock %}

    </div>
    <!-- End Wrapper -->
    {% endblock %}

</body>
<!-- End Body -->
{% endblock %}

{% block java %}
<!--   Core JS Files   -->
<script src="{{ asset('bundles/portada/js/core/jquery.3.2.1.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/portada/js/core/popper.min.js') }}" type="text/javascript"></script>
<script src="{{ asset('bundles/portada/js/core/bootstrap.min.js') }}" type="text/javascript"></script>
<!--  Plugin for Switches, full documentation here: http://www.jque.re/plugins/version3/bootstrap.switch/ -->
<script src="{{ asset('bundles/portada/js/plugins/bootstrap-switch.js') }}"></script>
<!--  Chartist Plugin  -->
<script src="{{ asset('bundles/portada/js/plugins/chartist.min.js') }}"></script>
<!--  Notifications Plugin    -->
<script src="{{ asset('bundles/portada/js/plugins/bootstrap-notify.js') }}"></script>
<!-- Control Center for Light Bootstrap Dashboard: scripts for the example pages etc -->
<script src="{{ asset('bundles/portada/js/light-bootstrap-dashboard.js?v=2.0.1') }}" type="text/javascript"></script>
<!-- Light Bootstrap Dashboard DEMO methods, don't include it in your project! -->
<script src="{{ asset('bundles/portada/js/demo.js') }}"></script>
{% endblock %}

{% block script %}{% endblock %}

</html>
{% extends 'PortadaBundle:Default:index.html.twig' %}

{% block title %}
<!-- Title -->
<title>Dr. Franklin Alvear | {{servicio.title}}</title>
{% endblock %}

{% block keywords %}
    {{servicio.keywords}}
{% endblock %}

{% block description %}
    {{servicio.description}}
{% endblock %}

{% block hreflang %}
<!-- hreflang tag -->
<link rel="alternate" href="https://franklinalvear.com/es/{{servicio.slugEs|trans}}" hreflang="es" />
<link rel="alternate" href="https://franklinalvear.com/pt/{{servicio.slugPt|trans}}" hreflang="pt" />
<link rel="alternate" href="https://franklinalvear.com/en/{{servicio.slugEn|trans}}" hreflang="en" />
<link rel="alternate" href="https://franklinalvear.com/it/{{servicio.slugIt|trans}}" hreflang="it" />
{% endblock %}

{% block opengraph %}
<!-- Schema.org markup for Google+ -->
<meta itemprop="name" content="{{servicio.title}}">
<meta itemprop="description" content="{{servicio.description}}">
<meta itemprop="image" content="{{servicio.imageUrlMain}}">

<!-- Twitter Card data -->
<meta name="twitter:card" content="summary_large_image">
<meta name="twitter:site" content="@dr_franklear">
<meta name="twitter:title" content="{{servicio.title}}">
<meta name="twitter:description" content="{{servicio.description}}">
<meta name="twitter:creator" content="@dr_franklear">
<!-- Twitter summary card with large image must be at least 280x150px -->
<meta name="twitter:image:src" content="{{servicio.imageUrlMain}}">

<!-- Open Graph data -->
<meta property="og:title" content="{{servicio.title}}" />
<meta property="og:type" content="product" />
<meta property="og:url" content="{{ app.request.uri }}" />
<meta property="og:image" content="{{servicio.imageUrlMain}}" />
<meta property="og:description" content="{{servicio.description}}" />
<meta property="og:locale" content="es">
<meta property="og:locale:alternate" content="en" />
<meta property="og:locale:alternate" content="pt" />
<meta property="og:locale:alternate" content="it" />
<meta property="og:site_name" content="Dr. Franklin Alvear {{"portada.cirujano_plastico_estetico"|trans}}" />
<meta property="fb:app_id" content="1522670851135903" />
{% endblock %}


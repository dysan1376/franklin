                "email": "franklin@hospi.me"
            }
        }
    }
</script>
{% endblock %}

{% block bodyclass %}
<body class="navigation-panel page-scrolling">
{% endblock %}

{% block navigation %}
<!-- Navigation -->
<nav id="navigation" class="navigation-panel light">

    <div class="navigation-inner">
        <!-- Navigation Primary -->
        <ul class="nav nav-primary-panel">
            <li class="nav-item"><a href="{{path('portada_homepage')}}#start" class="nav-link">{{"portada.inicio"|trans}}</a></li>
            <li class="nav-item"><a href="{{path('portada_homepage')}}#resume" class="nav-link">{{"portada.extracto"|trans}}</a></li>
            <li class="nav-item"><a href="{{path('portada_homepage')}}#services" class="nav-link">{{"portada.cirugias_procedimientos"|trans}}</a></li>
            <li class="nav-item"><a href="{{path('portada_homepage')}}#schedule" class="nav-link">{{"portada.agenda"|trans}}</a></li>
            <li class="nav-item"><a href="{{path('portada_homepage')}}#case-studies" class="nav-link">{{"portada.casos"|trans}}</a></li>
            <li class="nav-item"><a href="{{path('portada_homepage')}}#contact" class="nav-link">{{"portada.contacto"|trans}}</a></li>
        </ul>
    </div>
    
</nav>
<!-- Navigation / End -->
{% endblock %}

{% block content %}
<!-- Content -->
<div id="content" data-scheme="light">
    
    <!-- Section - Image -->
    <section class="section section-case-study-header text-center light" data-scheme="light">
        <!-- BG Image -->
        <div class="bg-image-container overlay-bottom light">
            <img src="{{ asset('bundles/portada/img/photos/doctor/project-cover.jpg') }}" alt="Franklin Alvear cover">
        </div>
    </section>

    <!-- Section - Description -->
    <section style="padding-bottom:0;" class="section light" data-scheme="light">
    
        <!-- Section Content -->
        <div class="section-content">
            <div class="container-slim">
                <h1 class=" display-4 mb-0">{{servicio.title}}</h1>
                <p class="lead text-muted">{{servicio.subtitle}}</p>
                <p class="lead">{{servicio.paragraphOne}} </p>
            </div>
            <!-- Image -->
            <div class="container pt-5 pb-5">
                <div class="row">
                    <div class="col-md-6">
                        <figure>
                            <img src="{{ servicio.imageUrlMain }}" class="figure-img rounded" alt="{{ servicio.imageAltMain }}">
                        </figure>
                    </div>
                    <div class="col-md-6">
                        <figure>
                            <img src="{{ servicio.imageUrlSecondary }}" class="figure-img rounded" alt="{{ servicio.imageAltSecondary }}">
                        </figure>
                    </div>
                </div>
            </div>
            <!-- Text -->
            <div class="container-slim">
                <div class="row">
                    <div class="col-sm-6">
                        <p class="mb-sm-0">{{servicio.paragraphTwo}}</p>
                    </div>
                    <div class="col-sm-6">
                        <p class="mb-sm-0">{{servicio.paragraphThree}}</p>
                    </div>
                </div>
                <hr class="hr-lg">
                <p>{{servicio.paragraphFour}}</p>
            </div>
        </div>

    </section>

    <!-- Section - Pricing -->
    <section id="pricing" class="section" data-scheme="light">
    
        <!-- Section Content -->
        <div class="section-content">
            <div class="container">
                <!-- Section Header -->
                <div class="section-header">
                    <span class="section-header-indicator"></span>
                    <div class="section-header-content"><span class="typing">{{"portada.precios"|trans}}</span></div>
                </div>
                <div class="row no-gutters">
                    {% if servicio.honorarios == "TIPO4" %}
                    <!-- Pricing Table -->
                    <div class="pricing-table col-md-4 animated" data-animation="fadeInRight">
                        <div class="pricing-table-header">
                            <h5 class="title">{{"portada.lipolaser"|trans}}</h5>
                            <span class="caption text-muted">{{"portada.lipectomia_laser"|trans}}</span>
                        </div>
                        <div class="pricing-table-price">
                            <span class="price"><span>{{servicio.currency}}</span>{{servicio.priceMin + 400}} - <span>{{servicio.currency}}</span>{{servicio.priceMax + 400}}</span>
                        </div>
                        <ul class="pricing-table-list">
                            <li>{{"portada.honorarios_cirujano"|trans}}</li>
                            <li>{{"portada.honorarios_ayudantes"|trans}}</li>
                            <li>{{"portada.honorarios_anestesiologo"|trans}}</li>
                            <li>{{"portada.equipo_lipolaser"|trans}}</li>
                        </ul>
                        <div class="pricing-table-price">
                            <span class="caption text-muted">{{servicio.appendText}}</span>
                        </div>
                        <div class="pricing-table-submit" data-local-scroll="">
                            <a href="{{ path('portada_homepage') }}#schedule" class="btn btn-dark btn-block">{{"portada.agendar_cita"|trans}}</a>
                        </div>
                    </div>
                    {% endif %}
                    <!-- Pricing Table -->
                    <div class="pricing-table featured {% if servicio.honorarios == "TIPO4" %}col-md-4{% else %}col-md-6 mx-auto{% endif %} ">
                        <div class="pricing-table-header">
                            <h5 class="title">{% if servicio.honorarios == "TIPO4" %}{{"portada.lipoescultura_convencional"|trans}}{% else %}{{servicio.title}}{% endif %}</h5>
                            <span class="caption text-muted">{{servicio.subtitle}}</span>
                        </div>
                        <div class="pricing-table-price">
                            <span class="price"><span>{{servicio.currency}}</span>{{servicio.priceMin}}{% if servicio.priceMax is not null %} - <span>{{servicio.currency}}</span>{{servicio.priceMax}}{% endif %}</span>
                        </div>
                        <ul class="pricing-table-list">
                            <li>{{"portada.honorarios_cirujano"|trans}}</li>
                            {% if servicio.honorarios == "TIPO1" %}
                            <li>{{"portada.materiales_insumos"|trans}}</li>
                            {% elseif servicio.honorarios == "TIPO2" %}
                            <li>{{servicio.title}}</li>
                            <li>{{"portada.materiales_insumos"|trans}}</li>
                            {% elseif servicio.honorarios == "TIPO3" or servicio.honorarios == "TIPO4" %}
                            <li>{{"portada.honorarios_ayudantes"|trans}}</li>
                            <li>{{"portada.honorarios_anestesiologo"|trans}}</li>
                            {% endif %}
                            
                        </ul>
                        {% if servicio.appendText is not null %}
                        <div class="pricing-table-price">
                            <span class="caption text-muted">{{servicio.appendText}}</span>
                        </div>
                        {% endif %}
                        <div class="pricing-table-submit" data-local-scroll>
                            <a href="{{ path('portada_homepage') }}#schedule" class="btn btn-primary-animated btn-block">{{"portada.agendar_cita"|trans}}</a>
                        </div>
                    </div>
                    {% if servicio.honorarios == "TIPO4" %}
                    <!-- Pricing Table -->
                    <div class="pricing-table col-md-4 animated" data-animation="fadeInLeft">
                        <div class="pricing-table-header">
                            <h5 class="title">{{"portada.vibrolipo"|trans}}</h5>
                            <span class="caption text-muted">{{"portada.lipectomia_vibro"|trans}}</span>
                        </div>
                        <div class="pricing-table-price">
                            <span class="price"><span>{{servicio.currency}}</span>{{servicio.priceMin + 200}} - <span>{{servicio.currency}}</span>{{servicio.priceMax + 200}}</span>
                        </div>
                        <ul class="pricing-table-list">
                            <li>{{"portada.honorarios_cirujano"|trans}}</li>
                            <li>{{"portada.honorarios_ayudantes"|trans}}</li>
                            <li>{{"portada.honorarios_anestesiologo"|trans}}</li>
                            <li>{{"portada.equipo_vibrolipo"|trans}}</li>
                        </ul>
                        <div class="pricing-table-price">
                            <span class="caption text-muted">{{servicio.appendText}}</span>
                        </div>
                        <div class="pricing-table-submit" data-local-scroll="">
                            <a href="{{ path('portada_homepage') }}#schedule" class="btn btn-dark btn-block">{{"portada.agendar_cita"|trans}}</a>
                        </div>
                    </div>
                    {% endif %}
                </div>
            </div>
        </div>

    </section>

</div>
<!-- Content / End -->
{% endblock %}

{% block message %}
<!-- Window - Message -->
<div id="message-window" class="window window-primary">
    <svg class="window-background" viewBox="0 0 1920 1080" preserveAspectRatio="none"></svg>
    <div class="window-inner">
        <section class="section dark">
            <div class="section-content">
                <div class="container-slim">
                    <!-- Section Header -->
                    <div class="section-header">
                        <img src="{{ asset('bundles/portada/img/photos/doctor/avatar-sm.png') }}" alt="" class="section-header-image">
                        <div class="section-header-content">
                            <span class="typing">{{"portada.normalmente"|trans}}</span>
                        </div>
                    </div>
                    <!-- Section Content -->
                    <form class="form-horizontal" action="{{ path ('portada_servicio', {'_locale': servicio.locale, 'slug': servicio.slug }) }}" method="POST" {{ form_enctype(form) }} data-message-error="Opps... Something went wrong - please try again later"
                    data-message-success="Thanks! You will recieve a responsve in 24h!" data-validate>
                        {{ form_errors(form) }}
                        <div class="row mb-4">
                            <div class="col-md-6 form-group">
                                <label>{{"portada.nombre"|trans}}:</label>
                                {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
                            </div>
                            <div class="col-md-6 form-group">
                                <label class="text-center">{{"portada.email"|trans}}:</label>
                                 {{ form_widget(form.email, {'attr': {'class': 'form-control'}}) }}
                            </div>
                        </div>
                        <div class="form-group">
                            {{ form_widget(form.message, {'attr': {'class': 'form-control-text', 'cols': '30', 'rows': '6', 'placeholder': 'portada.escribe_mensaje'|trans}}) }}
                        </div>
                        <div style="display:none;">
                            {{ form_rest(form) }}
                        </div>
                        <div class="text-center">
                            <button id="submit" class="btn btn-lg btn-outline-white">{{"portada.envia_mensaje"|trans}}</button>
                        </div>
                    </form>
                </div>
            </div>
        </section>
    </div>
</div>

<!-- Window Toggle - Message -->
<button class="window-toggle" data-target="#message-window"><i class="fa fa-comments"></i><i class="fa fa-times"></i></button>
{% endblock %}